<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">


    <com.daimajia.swipe.SwipeLayout
        android:layout_margin="5dp"
        android:id="@+id/swipe_donChoDuyet"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/swipe_bottom_right"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/donChoDuyet_bt_duyet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/duyetDon_xanhLa"
                android:text="DUYỆT" />

            <Button
                android:layout_marginLeft="5dp"
                android:id="@+id/donChoDuyet_bt_tuChoi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/tinhTrang_do"
                android:text="TỪ CHỐI" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/donChoDuyet_linear_layoutDonChoDuyet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/donChoDuyet_cardView_anh"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="16dp">

                    <ImageView
                        android:id="@+id/donChoDuyet_imgView_anh"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_account_circle_24" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/donChoDuyet_tv_tenNguoi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="--ten nguoi gui"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/donChoDuyet_tv_loaiNghi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:text="--loai nghi"
                android:textSize="17dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian nghỉ" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Số ngày nghỉ" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/donChoDuyet_tv_thoiGianNghi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--thoi gian nghi"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/donChoDuyet_tv_soNgayNghi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="--so ngay"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </com.daimajia.swipe.SwipeLayout>

</androidx.cardview.widget.CardView>
