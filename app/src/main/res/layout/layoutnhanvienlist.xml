<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingTop="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/danhSachNhanVien_circleImgageView_imgNV"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp">

            <TextView
                android:id="@+id/danhSachNhanVien_textView_tenNV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Nhân viên"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/danhSachNhanVien_textView_chucVuNV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Chức vụ" />

            <TextView
                android:id="@+id/danhSachNhanVien_textView_phongBanNV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Phòng ban" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>