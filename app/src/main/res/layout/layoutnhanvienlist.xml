<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/danhSachNhanVien_linear_layoutNV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/danhSachNhanVien_circleImgageView_imgNV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/danhSachNhanVien_textView_tenNV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Nhân viên"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/danhSachNhanVien_textView_chucVuNV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Chức vụ" />

            <TextView
                android:id="@+id/danhSachNhanVien_textView_phongBanNV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Phòng ban" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>